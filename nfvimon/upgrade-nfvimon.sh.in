#!/bin/sh
#
###############################################################################
#
# Upgrade NFVIMON
#
###############################################################################
set -e
export NFVIMON_TENANT_ID="`serviced service list nfvimon --format='{{.ID}}'`"
serviced snapshot untag $NFVIMON_TENANT_ID preupgrade-nfvimon-%VERSION%
/root/%SHORT_VERSION%.x/check_for_old_servicedef.py nfvimon 1.0.0
serviced script run /root/%SHORT_VERSION%.x/upgrade-nfvimon.txt --service nfvimon
/opt/serviced/bin/serviced-set-version NFVIMON %NFVIMON_VERSION%
